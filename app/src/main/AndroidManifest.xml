<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.shoptop"
    tools:ignore="ExtraText">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShopTop">
        <activity
            android:name=".ViewOrder"
            android:theme="@style/Theme.ShopTop.NoActionBar.TransparentStatusBar"/>
        <activity
            android:name=".SupplierOrder"
            android:theme="@style/Theme.ShopTop.NoActionBar.TransparentStatusBar"/>
        <activity
            android:name=".Orders"
            android:theme="@style/Theme.ShopTop.NoActionBar.TransparentStatusBar" />
        <activity
            android:name=".UploadCattle"
            android:theme="@style/Theme.ShopTop.NoActionBar.TransparentStatusBar" />
        <activity
            android:name=".UploadVegetable"
            android:theme="@style/Theme.ShopTop.NoActionBar.TransparentStatusBar" />
        <activity
            android:name=".UploadFruits"
            android:theme="@style/Theme.ShopTop.NoActionBar.TransparentStatusBar" />
        <activity
            android:name=".SupplierCattle"
            android:theme="@style/Theme.ShopTop.NoActionBar.TransparentStatusBar" />
        <activity
            android:name=".SupplierVegetable"
            android:theme="@style/Theme.ShopTop.NoActionBar.TransparentStatusBar" />
        <activity
            android:name=".SupplierFruit"
            android:theme="@style/Theme.ShopTop.NoActionBar.TransparentStatusBar" />
        <activity
            android:name=".SupplierDashboard"
            android:theme="@style/Theme.ShopTop.NoActionBar.TransparentStatusBar" />
        <activity
            android:name=".Cattle"
            android:exported="false"
            android:theme="@style/Theme.ShopTop.NoActionBar.TransparentStatusBar" />
        <activity
            android:name=".BuyerCreateAccount"
            android:theme="@style/Theme.ShopTop.NoActionBar.TransparentStatusBar" />
        <activity
            android:name=".Home"
            android:theme="@style/Theme.ShopTop.NoActionBar.TransparentStatusBar" />
        <activity
            android:name=".Markets"
            android:theme="@style/Theme.ShopTop.NoActionBar.TransparentStatusBar" />
        <activity
            android:name=".ForgotPassword"
            android:theme="@style/Theme.ShopTop.NoActionBar.TransparentStatusBar" />
        <activity
            android:name=".Login"
            android:theme="@style/Theme.ShopTop.NoActionBar.TransparentStatusBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ShopTop.NoActionBar.TransparentStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>